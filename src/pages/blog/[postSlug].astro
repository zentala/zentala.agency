---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map((post) => ({
    params: { postSlug: post.slug },
  }))
}

const { postSlug } = Astro.params
const post = (await getCollection('blog')).find(
  (p) => p.slug === postSlug && (import.meta.env.DEV || p.data.published),
)
const authorData = (await getCollection('authors'))[0].data

if (!post) {
  return Astro.redirect('/404')
}

const author = authorData.find((a) => a.slug === post.data.author)
const authorRole = post.data.authorRole || author?.role

if (!author) {
  throw new Error(`Author not found for slug: ${post.data.author}`)
}

const { Content } = await post.render()
---

<Layout title={post.data.title}>
  <main class="container mx-auto p-16 max-w-8xl border-x border-gray-800">
    <div class="container mx-auto pt-8 pb-16 px-4">
      <div class="flex items-center gap-x-4 mb-8 pt-8 text-lg">
        <img
          class="h-10 w-10 rounded-full"
          src={author.avatar}
          alt={`Avatar of ${author.name}`}
        />
        <span class="text-white">
          <span class="font-semibold">{author.name}</span>
          <span class="text-gray-400 ml-2">{authorRole}</span>
        </span>
        <span class="text-gray-600">·</span>
        {
          post.data.category && (
            <>
              <a
                href={`/category/${post.data.category}`}
                class="text-gray-500 hover:text-gray-300"
              >
                {post.data.category}
              </a>
              <span class="text-gray-600">·</span>
            </>
          )
        }
        <time datetime={post.data.date} class="text-gray-500">
          {
            new Date(post.data.date).toLocaleDateString('pl-PL', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </time>
      </div>

      <h1 class="text-6xl font-light mb-8 text-white">{post.data.title}</h1>

      {
        post.data.excerpt && (
          <p class="text-3xl text-gray-300 leading-relaxed mb-12 font-light">
            {post.data.excerpt}
          </p>
        )
      }

      <article
        class="prose text-white custom-markdown [&>p]:text-2xl [&>h2]:text-4xl [&>h3]:text-3xl [&>ul]:text-2xl [&>ol]:text-2xl [&>blockquote]:text-2xl"
      >
        <Content />
      </article>

      {
        post.data.bannerEnd &&
          (async () => {
            try {
              const Banner = await import(
                `../../banners/${post.data.bannerEnd}.astro`
              )
              return <Banner.default />
            } catch (error) {
              console.error('Błąd ładowania bannera:', error)
              return null
            }
          })()
      }
    </div>
  </main>
</Layout>
