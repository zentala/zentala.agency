---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts
    .filter((post) => import.meta.env.DEV || post.data.published !== false)
    .map((post) => ({
      params: { postSlug: post.slug },
    }))
}

const { postSlug } = Astro.params
const post = (await getCollection('blog')).find(
  (p) =>
    p.slug === postSlug && (import.meta.env.DEV || p.data.published !== false),
)
const authorData = (await getCollection('authors'))[0].data

if (!post) {
  return Astro.redirect('/404')
}

const author = authorData.find((a) => a.slug === post.data.author)
const authorRole = post.data.authorRole || author?.role

if (!author) {
  throw new Error(`Author not found for slug: ${post.data.author}`)
}

const { Content } = await post.render()
---

<Layout title={post.data.title}>
  <section class="section-full">
    <div class="container-padded">
      <div class="pb-16 pt-8">
        <div class="mb-8 flex items-center gap-x-4 pt-8 text-lg">
          <img
            class="h-10 w-10 rounded-full"
            src={author.avatar}
            alt={`Avatar of ${author.name}`}
          />
          <span class="text-white">
            <span class="font-semibold">{author.name}</span>
            <span class="ml-2 text-gray-400">{authorRole}</span>
          </span>
          <span class="text-gray-600">·</span>
          {
            post.data.category && (
              <>
                <a
                  href={`/category/${post.data.category}`}
                  class="text-gray-500 hover:text-gray-300"
                >
                  {post.data.category}
                </a>
                <span class="text-gray-600">·</span>
              </>
            )
          }
          <time datetime={post.data.date} class="text-gray-500">
            {
              new Date(post.data.date).toLocaleDateString('pl-PL', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })
            }
          </time>
        </div>

        <h1 class="mb-8 text-6xl font-light text-white">{post.data.title}</h1>

        {
          post.data.excerpt && (
            <p class="mb-12 text-3xl font-light leading-relaxed text-gray-300">
              {post.data.excerpt}
            </p>
          )
        }

        <article
          class="custom-markdown prose max-w-none text-white [&>blockquote]:text-2xl [&>h2]:text-4xl [&>h2]:text-white [&>h3]:text-3xl [&>h3]:text-white [&>h4]:text-white [&>h5]:text-white [&>h6]:text-white [&>ol]:list-decimal [&>ol]:pl-8 [&>ol]:text-2xl [&>p]:text-2xl [&>ul]:list-disc [&>ul]:pl-8 [&>ul]:text-2xl [&_a:hover]:text-gray-300 [&_a]:text-white [&_a]:no-underline [&_b]:text-white [&_strong]:text-white"
        >
          <Content />
        </article>

        <style>
          /* Override Tailwind Typography plugin blue colors for blog posts */
          .prose.custom-markdown {
            --tw-prose-links: theme('colors.white');
            --tw-prose-headings: theme('colors.white');
            --tw-prose-bold: theme('colors.white');
          }

          .prose.custom-markdown h1,
          .prose.custom-markdown h2,
          .prose.custom-markdown h3,
          .prose.custom-markdown h4,
          .prose.custom-markdown h5,
          .prose.custom-markdown h6 {
            color: white !important;
          }

          .prose.custom-markdown a {
            color: white !important;
            text-decoration: none;
            position: relative;
            transition: color 200ms ease-in-out;
          }

          .prose.custom-markdown a:hover {
            color: rgb(209 213 219) !important; /* gray-300 */
          }

          .prose.custom-markdown a::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -2px;
            width: 100%;
            height: 1px;
            background-color: currentColor;
            opacity: 0.4;
            transition: opacity 200ms ease-in-out;
          }

          .prose.custom-markdown a:hover::after {
            opacity: 0.8;
          }

          .prose.custom-markdown strong,
          .prose.custom-markdown b {
            color: white !important;
            font-weight: 600;
          }
        </style>

        {
          post.data.bannerEnd &&
            (async () => {
              try {
                const Banner = await import(
                  `../../banners/${post.data.bannerEnd}.astro`
                )
                return <Banner.default />
              } catch (error) {
                console.error('Błąd ładowania bannera:', error)
                return null
              }
            })()
        }
      </div>
    </div>
  </section>
</Layout>
