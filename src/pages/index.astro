---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import TrustedMe from '../components/TrustedMe.astro'
import TextBlockIcon from '../components/TextBlockIcon.astro'
const heroProps = {
  title: 'Żentała',
  subtitle: 'Innovation Agency',
}
---

<Layout
  title="Home"
  description="Żentała Innovation Agency - Driving progress through cutting-edge technology solutions in software, IoT, and automation. Let's build the future, together."
>
  <Hero {...heroProps} />
  <main class="bg-black border-y border-gray-800">
    <div class="container mx-auto max-w-8xl border-x border-gray-800 p-24">
      <img src="./logo.ext.svg" class="mx-auto max-w-6xl" />
    </div>
  </main>
  <section>
    <TrustedMe />
  </section>
  <section class="hero bg-black border-y border-gray-800 text-white">
    <div class="container mx-auto max-w-8xl border-x border-gray-800 p-24">
      <h2 class="text-4xl font-bold">Zaufali mi</h2>
    </div>
  </section>

  <style></style>
</Layout>
