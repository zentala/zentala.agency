---
import Layout from '../layouts/Layout.astro'
import TrustedMe from '../components/TrustedMe.astro'
import Quote from '../components/Quote.astro'
import Hero from '../components/Hero.astro'

const heroProps = {
  title: 'Demo',
  subtitle: 'Testing ground for new components',
}
---

<Layout
  title="Demo - Component Testing"
  description="Demo page for testing and developing new components locally before implementation."
>
  <Hero {...heroProps} />

  <main class="border-y border-gray-800 bg-black">
    <div class="container-padded py-responsive-lg">
      <div class="mb-8 text-white">
        <h2 class="mb-4 text-4xl font-light">Component Testing Area</h2>
        <p class="text-gray-400">
          This page is for testing new components locally before implementing
          them on the main site.
        </p>
      </div>

      <!-- Quote Component Test -->
      <section class="mb-16">
        <h3 class="mb-8 text-2xl font-light text-white">Quote Component</h3>

        <!-- Standard quote -->
        <Quote
          text="Implementing a new developer portal is not just a technical challenge; it's also a cultural one."
          author="Paweł Żentała"
          source="Developer Portal Implementation Guide"
        />

        <!-- Quote with gradient variant -->
        <div class="mt-8">
          <Quote
            text="Innovation has always fascinated me, and I dream of implementing such strategies in Poland."
            author="Paweł Żentała"
          />
        </div>

        <!-- Simple quote without author -->
        <div class="mt-8">
          <Quote text="The future belongs to those who prepare for it today." />
        </div>
      </section>

      <!-- Trusted Me Component Test -->
      <section class="mb-16">
        <h3 class="mb-8 text-2xl font-light text-white">
          Trusted Me Component
        </h3>
        <TrustedMe />
      </section>

      <!-- Additional sections for future components -->
      <section class="mb-16">
        <h3 class="mb-8 text-2xl font-light text-white">Zaufali mi Section</h3>
        <div class="hero border border-gray-800 bg-black text-white">
          <div class="p-24">
            <h2 class="text-4xl font-bold">Zaufali mi</h2>
            <p class="mt-4 text-gray-400">
              Sekcja do pokazania klientów - do rozwinięcia
            </p>
          </div>
        </div>
      </section>

      <!-- Placeholder for more components -->
      <section>
        <h3 class="mb-8 text-2xl font-light text-white">Future Components</h3>
        <div class="border border-gray-800 p-8 text-center text-gray-400">
          <p>Miejsce na nowe komponenty w przyszłości</p>
        </div>
      </section>
    </div>
  </main>
</Layout>
