        {
          posts.map((post) => (
            <PostCard
              title={post.data.title}
              date={post.data.date}
              category={post.data.category}
              imageUrl={post.data.imageUrl}
              excerpt={post.data.excerpt}
              authorName={post.data.authorName}
              authorAvatar={post.data.authorAvatar}
              authorRole={post.data.authorRole}
              link={`/blog/${post.slug}`}
            />
          ))
        }
      </div>
    </div>
