---
import CardContainer from './CardContainer.astro'
import Badge from '../primitives/Badge.astro'

export interface PortfolioItemProps {
  title: string
  subtitle: string
  image?: string
  link?: string
  linkTitle?: string
  key: string
  tags?: string[]
}

const { title, subtitle, link, linkTitle, key, tags } = Astro.props

// Determine target for external links
const target =
  link && (link.startsWith('http://') || link.startsWith('https://'))
    ? '_blank'
    : '_self'
---

<CardContainer
  href={link}
  target={target}
  class="portfolio-item"
  data-key={key}
>
  <!-- {image && <img src={image} alt={title} class="portfolio-item__image" />} -->

  <h2 class="portfolio-item__title">{title}</h2>
  <p class="portfolio-item__subtitle">{subtitle}</p>

  {
    tags && tags.length > 0 && (
      <div class="portfolio-item__tags">
        {tags.map((tag: string) => (
          <Badge variant="tech" size="sm">
            {tag}
          </Badge>
        ))}
      </div>
    )
  }

  {linkTitle && <p class="portfolio-item__link-title">â†’ {linkTitle}</p>}
</CardContainer>

<style lang="scss">
  @use '../../styles/components/cards' as *;

  .portfolio-item__title {
    @extend %card-title-medium;
  }

  .portfolio-item__subtitle {
    @extend %card-content;
    color: #9ca3af; /* gray-400 */
    line-height: 1.6;
  }

  .portfolio-item__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .portfolio-item__link-title {
    margin-top: 1rem;
    font-size: 0.875rem; /* text-sm */
    color: #60a5fa; /* blue-400 */
    opacity: 0.75;
  }

  .portfolio-item__image {
    width: 100%;
    height: 12rem; /* h-48 */
    object-fit: cover;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
  }

  /* Responsive typography */
  @media (max-width: 770px) {
    .portfolio-item__title {
      font-size: 1.25rem; /* text-xl */
    }

    .portfolio-item__subtitle {
      font-size: 1rem; /* text-base */
    }

    .portfolio-item__tags {
      margin-top: 0.75rem;
      gap: 0.375rem;
    }
  }

  @media (max-width: 480px) {
    .portfolio-item__title {
      font-size: 1.125rem; /* text-lg */
    }

    .portfolio-item__subtitle {
      font-size: 0.875rem; /* text-sm */
    }

    .portfolio-item__tags {
      margin-top: 0.5rem;
    }
  }
</style>
