---
import CardContainer from './CardContainer.astro'

export interface OfferCardProps {
  number: string
  title: string
  description: string
  icon: string
  href?: string
}

const { number, title, description, icon, href } = Astro.props
---

<CardContainer href={href} class="offer-card">
  <!-- Large icon in top-right corner like before -->
  <div class="flex justify-end">
    <span class="icon absolute right-4 top-4 text-9xl opacity-30">
      {icon}
    </span>
  </div>

  <!-- Large number in top-left corner like before -->
  <span class="number absolute left-4 top-0 text-9xl font-semibold opacity-5">
    {number}
  </span>

  <h3 class="offer-card__title">{title}</h3>
  <p class="offer-card__description">{description}</p>
</CardContainer>

<style lang="scss">
  @use '../../styles/components/cards' as *;

  .offer-card {
    position: relative;
    overflow: hidden;
    z-index: 0;
  }

  .icon {
    z-index: 0;
  }

  .number {
    z-index: 0;
  }

  .offer-card__title {
    @extend %card-title-large;
    margin-top: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .offer-card__description {
    @extend %card-content;
    position: relative;
    z-index: 1;
  }

  /* Responsive typography */
  @media (max-width: 770px) {
    .icon {
      font-size: 7rem; /* Smaller but still big */
    }

    .number {
      font-size: 7rem;
    }

    .offer-card__title {
      font-size: 1.5rem; /* text-2xl */
      margin-bottom: 0.75rem;
    }

    .offer-card__description {
      font-size: 1.125rem; /* text-lg */
    }
  }

  @media (max-width: 480px) {
    .icon {
      font-size: 5rem; /* Even smaller but still prominent */
    }

    .number {
      font-size: 5rem;
    }

    .offer-card__title {
      font-size: 1.25rem; /* text-xl */
      margin-bottom: 0.5rem;
    }

    .offer-card__description {
      font-size: 1rem; /* text-base */
    }
  }
</style>
