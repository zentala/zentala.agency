---
import type { BannerProps } from '../types'

interface SimpleBannerProps {
  title: string
  description: string
  linkText: string
  linkHref: string
  class?: string
}

const { title, description, linkText, linkHref, class: className = '' } = Astro.props
---

<div class={`banner banner-simple ${className}`}>
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={linkHref} class="banner-link">{linkText}</a>
</div>

<style lang="scss">
  @use '../../../styles/variables' as *;

  .banner-simple {
    width: 100%;
    margin: 4rem 0;
    background: black;
    border: 1px solid $border-color; /* border-gray-800 */
    border-left: 1px solid white; /* White left border */

    // Responsive padding using design system
    @include padding-responsive('md'); // 64px → 48px → 32px → 24px → 16px

    h3 {
      @apply mb-4 font-light text-white;
      font-size: 2rem; // text-3xl
      line-height: 1.2;

      @include tablet {
        font-size: 1.75rem; // text-2xl
      }

      @include mobile {
        font-size: 1.5rem; // text-xl
      }
    }

    p {
      @apply mb-6 text-gray-300;
      font-size: 1.25rem; // text-xl
      line-height: 1.6;

      @include tablet {
        font-size: 1.125rem; // text-lg
      }

      @include mobile {
        font-size: 1rem; // text-base
      }
    }

    .banner-link {
      @apply inline-block text-white transition-colors duration-200;
      font-size: 1.125rem; // text-lg
      position: relative;
      padding-bottom: 2px;

      @include tablet {
        font-size: 1rem; // text-base
      }

      @include mobile {
        font-size: 0.875rem; // text-sm
      }

      &:hover {
        @apply text-gray-300;
      }

      &::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 1px;
        background-color: currentColor;
        opacity: 0.6;
        transition: opacity 200ms ease-in-out;
      }

      &:hover::after {
        opacity: 1;
      }
    }
  }
</style>

